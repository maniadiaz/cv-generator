{
  "name": "cv-generator-backend",
  "version": "1.0.0",
  "description": "Backend para CV Generator - Formato Harvard",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:skills": "node scripts/migrate-skill-categories.js",
    "migrate:oxford": "node scripts/migrate-oxford-template.js",
    "migrate:ats": "node scripts/migrate-ats-template.js",
    "seed": "npx sequelize-cli db:seed:all",
    "setup:db": "node scripts/setup-database.js",
    "create:db": "node scripts/create-database.js",
    "drop:tables": "node scripts/drop-tables.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:skills": "node tests/test-skill-categories.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "generate:previews": "node scripts/generate-template-previews.js",
    "generate:html": "node scripts/generate-html-previews.js"
  },
  "keywords": [
    "cv",
    "generator",
    "harvard",
    "express",
    "sequelize"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "puppeteer": "^24.36.1",
    "sequelize": "^6.35.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "axios": "^1.13.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  }
}
